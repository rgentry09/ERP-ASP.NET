                    }
                    else
                    {
                        <td class="grid-cell"></td>
                    }
                }
            }
        </tr>
    }
    if (Model.IsMaxEnabled)
    {
        <tr class="grid-totals-row">
            @if (firstColumn != null
               && (firstColumn.IsSumEnabled || firstColumn.IsAverageEnabled
                   || firstColumn.IsMaxEnabled || firstColumn.IsMinEnabled))
