@model GridMvc.Demo.Models.Order

<dl>
    <dt>Order number:</dt>
    <dd>@Model.OrderID</dd>


    @if (Model.OrderDate.HasValue)
    {

        <dt>Order date:</dt>
        <dd>@Model.OrderDate.Value.ToString()</dd>

    }

    <dt>Freight:</dt>
    <dd>@Model.Freight</dd>

    <dt>
        Ship address:
    </dt>
    <dd>
        @Model.ShipPostalCode, @Model.ShipCity, @Model.ShipCity,
        @Model.ShipAddress
    </dd>

    <dt>
        Customer:
    </dt>
    <dd>@Model.Customer.CompanyName</dd>
</dl>
